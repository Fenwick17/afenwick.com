---
import type { BlogPost } from '@types';
import BlogPreview from "./BlogPreview.astro";
import Pagination from "./Pagination.astro";

interface Props {
  posts: BlogPost[]; 
  length?: number;
  currentUrl?: string;
  currentPage?: number;
  firstUrl?: string;
  prevUrl?: string;
  nextUrl?: string;
  lastUrl?: string;
  hidePagination?: boolean;
}

const { posts, length, currentUrl, currentPage, firstUrl, prevUrl, nextUrl, lastUrl, hidePagination } = Astro.props;
---

<style>
  .blog-list {
    padding-left: 0;

    li {
      list-style: none;
    }

    .blog-preview-title {
      margin-bottom: 0;
    }

    .blog-preview-date {
      display: block;
      margin-bottom: 1rem;
    }
  }
</style>

<ul class="blog-list">
  {
    posts.map((blog) => (
      <li>
        <BlogPreview blog={blog} />
      </litclass=>
    ))
  }
</ul>

{ !hidePagination &&
  <Pagination
    length={length}
    currentUrl={currentUrl}
    currentPage={currentPage}
    firstUrl={firstUrl}
    prevUrl={prevUrl}
    nextUrl={nextUrl}
    lastUrl={lastUrl}
  />
}