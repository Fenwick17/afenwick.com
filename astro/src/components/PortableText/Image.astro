---
import urlFor from '../../../utils/urlFor';
import type { Image } from '@types';

interface Props {
  node: {
    image: Image;
  };
}

const { node } = Astro.props;
---

<style>
  .blog-post-img {
    max-width: 100%;
    height: auto;
    display: block;
  }  
</style>

<img
  src={urlFor(node).url()} 
  alt={node.alt}
  loading="lazy"
  class="blog-post-img"
/>

<style>
  img {
    margin: auto;
    padding: 1em;
  }
</style>